FROM nvidia/cuda:12.1.0-cudnn8-runtime-ubuntu22.04

# 1) Paquetes necesarios
RUN apt-get update && apt-get install -y \
    python3.11 python3.11-venv python3-pip \
    curl pciutils lshw \
    && rm -rf /var/lib/apt/lists/*

# 2) Variables de entorno útiles
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    VIRTUAL_ENV=/opt/venv \
    PATH="/opt/venv/bin:$PATH"

WORKDIR /app

# 3) Crear venv con python3.11 y actualizar pip del venv
RUN python3.11 -m venv "$VIRTUAL_ENV" \
    && "$VIRTUAL_ENV/bin/pip" install --upgrade pip setuptools wheel

# 4) Dependencias de tu app
COPY backend-llm/requirements.txt .
RUN "$VIRTUAL_ENV/bin/pip" install --no-cache-dir -r requirements.txt

# 5) Librería de embeddings
COPY embedding_utils /app/embedding_utils
RUN "$VIRTUAL_ENV/bin/pip" install --no-cache-dir /app/embedding_utils

# 6) App
COPY backend-llm/app/ ./app

EXPOSE 8000
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
